{
  "name": "Tabular Statistics",
  "version": "0.1.0-dev0",
  "title": "Tabular Statistics",
  "description": "Calculating Statistics for Numeric and Floating-Point Columns in Tabular Files",
  "author": "Hamdah Shafqat abbasi (hamdahshafqat.abbasi@nih.gov), Nick Schaub (nick.schaub@nih.gov)",
  "institution": "National Center for Advancing Translational Sciences, National Institutes of Health",
  "repository": "https://github.com/PolusAI/tabular-tools",
  "website": "https://ncats.nih.gov/preclinical/core/informatics",
  "citation": "",
  "containerId": "polusai/tabular-statistics-tool:0.1.0-dev0",
  "baseCommand": [
    "python3",
    "-m",
    "polus.tabular.features.tabular_statistics"
  ],
  "inputs": [
    {
      "name": "statistics",
      "type": "array",
      "description": "The csv statistics to generate",
      "options": {
        "items": {
          "type": "string",
          "title": "Select statistic",
          "description": "Tabular Statistics",
          "required": true,
          "oneOf": [
            {
              "description": "Mean",
              "enum": [
                "mean"
              ]
            },
            {
              "description": "Median",
              "enum": [
                "median"
              ]
            },
            {
              "description": "Standard Deviation",
              "enum": [
                "std"
              ]
            },
            {
              "description": "Variance",
              "enum": [
                "var"
              ]
            },
            {
              "description": "Skewness",
              "enum": [
                "skew"
              ]
            },
            {
              "description": "Kurtosis",
              "enum": [
                "kurt"
              ]
            },
            {
              "description": "Total Count",
              "enum": [
                "count"
              ]
            },
            {
              "description": "Maximum Value",
              "enum": [
                "max"
              ]
            },
            {
              "description": "Minimum Value",
              "enum": [
                "min"
              ]
            },
            {
              "description": "Inter Quartile Range",
              "enum": [
                "iqr"
              ]
            },
            {
              "description": "Proportion",
              "enum": [
                "prop"
              ]
            },
            {
              "description": "All parameters",
              "enum": [
                "all"
              ]
            }
          ],
          "default": "count",
          "widget": "select",
          "minItems": 1,
          "uniqueItems": "true"
        }
      }
    },
    {
      "name": "inpDir",
      "type": "genericData",
      "description": "Input tabular collection to be processed by this plugin",
      "required": true
    },
    {
      "name": "filePattern",
      "type": "string",
      "description": "Pattern to select files for grouping",
      "required": false
    },
    {
      "name": "groupBy",
      "type": "string",
      "description": "The variable(s) to group rows",
      "required": false
    }
  ],
  "outputs": [
    {
      "name": "outDir",
      "type": "genericData",
      "description": "Output collection"
    }
  ],
  "ui": [
    {
      "key": "inputs.statistics",
      "title": "Statistics",
      "description": "Types of statistics to calculate"
    },
    {
      "key": "inputs.inpDir",
      "title": "Input collection",
      "description": "Input tabular collection to be processed by this plugin"
    },
    {
      "key": "inputs.filePattern",
      "title": "Filepattern",
      "description": "Pattern to select files for grouping"
    },
    {
      "key": "inputs.groupBy",
      "title": "Groupby Variables(s)",
      "description": "The variable(s) to group rows"
    }
  ]
}